{
  "name": "goal-portfolio-sync-workers",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend for Goal Portfolio Viewer sync",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:staging": "wrangler tail --env staging",
    "tail:production": "wrangler tail --env production",
    "kv:create": "wrangler kv:namespace create SYNC_KV",
    "kv:list": "wrangler kv:namespace list",
    "test": "node test-password-auth.js"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "sync",
    "privacy"
  ],
  "author": "laurenceputra",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
