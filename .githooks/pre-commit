#!/bin/bash
# Pre-commit hook for Goal Portfolio Viewer
# Ensures code quality and tests pass before commit

set -e

echo "üîç Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if npm is available
if ! command -v npm &> /dev/null; then
    echo -e "${RED}‚ùå npm is not installed${NC}"
    exit 1
fi

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  node_modules not found. Running npm install...${NC}"
    npm install
fi

# Run linter
echo ""
echo "üìù Running ESLint..."
if npm run lint; then
    echo -e "${GREEN}‚úÖ Linting passed${NC}"
else
    echo -e "${RED}‚ùå Linting failed${NC}"
    echo ""
    echo "Fix linting errors before committing."
    echo "Run: npm run lint"
    exit 1
fi

# Run tests
echo ""
echo "üß™ Running Jest tests..."
if npm test -- --coverage; then
    echo -e "${GREEN}‚úÖ Tests passed${NC}"
else
    echo -e "${RED}‚ùå Tests failed${NC}"
    echo ""
    echo "Fix failing tests before committing."
    echo "Run: npm test"
    exit 1
fi

# Check for console.log in production code (excluding DEBUG mode)
echo ""
echo "üîç Checking for console.log statements..."
if git diff --cached --name-only | grep -q '\.js$'; then
    CONSOLE_LOGS=$(git diff --cached --name-only | grep '\.js$' | xargs grep -n "console\.log" | grep -v "DEBUG" | grep -v "__tests__" || true)
    if [ -n "$CONSOLE_LOGS" ]; then
        echo -e "${YELLOW}‚ö†Ô∏è  Warning: Found console.log statements:${NC}"
        echo "$CONSOLE_LOGS"
        echo ""
        echo -e "${YELLOW}Consider removing console.log or using DEBUG flag${NC}"
        # Not blocking, just warning
    fi
fi

# Check for version bump in behavior changes
echo ""
echo "üî¢ Checking for version consistency..."
USERSCRIPT_VERSION=$(grep -oP '@version\s+\K[0-9.]+' tampermonkey/goal_portfolio_viewer.user.js | head -1)
PACKAGE_VERSION=$(grep -oP '"version":\s*"\K[0-9.]+' package.json)

if [ "$USERSCRIPT_VERSION" != "$PACKAGE_VERSION" ]; then
    echo -e "${RED}‚ùå Version mismatch:${NC}"
    echo "  userscript: $USERSCRIPT_VERSION"
    echo "  package.json: $PACKAGE_VERSION"
    echo ""
    echo "Versions must match. Update both files."
    exit 1
else
    echo -e "${GREEN}‚úÖ Version consistent: $PACKAGE_VERSION${NC}"
fi

# All checks passed
echo ""
echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
echo ""
exit 0
